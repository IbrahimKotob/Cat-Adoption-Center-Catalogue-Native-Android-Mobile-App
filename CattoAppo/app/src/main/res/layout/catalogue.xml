<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/bgcats">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/border"
        android:columnCount="2"
        android:padding="20dp"
        android:rowCount="5">

        <ImageButton
            android:id="@+id/cat1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:contentDescription="Pink Tabby"
            android:src="@drawable/cat1" />

        <ImageButton
            android:id="@+id/cat2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:contentDescription="Brown Cat"
            android:src="@drawable/cat2" />

        <ImageButton
            android:id="@+id/cat3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:contentDescription="White Cat"
            android:src="@drawable/cat3" />

        <ImageButton
            android:id="@+id/cat4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:contentDescription="Siamese"
            android:src="@drawable/cat4" />

        <ImageButton
            android:id="@+id/cat6"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:contentDescription="White Cat"
            android:src="@drawable/cat6" />

        <ImageButton
            android:id="@+id/cat5"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:contentDescription="Calico"
            android:src="@drawable/cat5" />

        <ImageButton
            android:id="@+id/cat7"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:contentDescription="Orange Tabby"
            android:src="@drawable/cat7" />

        <ImageButton
            android:id="@+id/cat8"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:contentDescription="Scottish Fold"
            android:src="@drawable/cat8" />
    </GridLayout>
</LinearLayout>